<Page
    x:Class="RMeX3.About_Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RMeX3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Background="#FF98D5F1" >
                <Button x:ConnectionId='1' x:Name="BackButton" FontFamily="Segoe MDL2 Assets" Content="&#59179;" Width="50" Height="50" Background="Transparent"                          FontWeight="Bold" FontSize="21.333" ClickMode="Press"/>
                <StackPanel Orientation="Vertical" Height="50">
                    <TextBlock FontSize="18" Margin="70,12,0,0" >About RMeX</TextBlock>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="20" ></StackPanel>

            <StackPanel Orientation="Horizontal" >
                <TextBlock FontSize="15" Margin="10,0,0,0" >Description</TextBlock>
            </StackPanel>

        </StackPanel>
       
    </Grid>
</Page>

